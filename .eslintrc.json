{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommend",
    "plugin:@typescript-eslint/recommend",
    "plugin:@typescript-eslint/eslint-recommend"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "prettier/prettier": "off",
    "@typescript-eslint/camelcase": "error",
    "comma-dangle": "error",
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}